<div class="container mt-4">
  <%= render 'devise/shared/message' %>

  <div class="card">
    <div class="card-body">
      <%= render @user %>
    </div>
  </div>

  <div class="d-flex justify-content-between mt-3">
    <%= link_to "Edit this user", edit_user_path(@user), class: "btn btn-warning flex-grow-1 me-2" %>
    <%= link_to "Back to users", users_path, class: "btn btn-secondary flex-grow-1 me-2" %>
    <%= button_to "Destroy this user", @user, method: :delete, class: "btn btn-danger flex-grow-1", data: { confirm: "Are you sure?" } %>
  </div>
</div>

